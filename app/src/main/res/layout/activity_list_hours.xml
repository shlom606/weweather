<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".ListHours">

    <TextView
        android:id="@+id/CityDisplay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#FFEB3B"
        android:text="placeholder"
        android:textSize="26sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:textColor="#000FF0" />
    <Button
        android:id="@+id/btn_prevScreen"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_below="@+id/CityDisplay"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFEB3B"
        android:text="Return to the previous screen"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_mainScreen"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_prevScreen"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFEB3B"
        android:text="Return to the main screen"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ListHours"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="180dp"
        android:divider="#FFFF00"
        android:dividerHeight="5dp"
        android:listSelector="#00FFFF"
        tools:context="abhiandroid.com.listexample.MainActivity">
    </ListView>

</RelativeLayout>